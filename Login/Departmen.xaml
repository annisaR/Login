        <Button Grid.ColumnSpan="2" Content="Delete" HorizontalAlignment="Left" Margin="204,196,0,0" Grid.Row="1" VerticalAlignment="Top" Width="76" Height="35" Background="#FF990F0F"/>

    </Grid>
